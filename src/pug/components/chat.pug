.chat
  .chat-container
    .form-content
      h2.chat-container__heading Let's talk
      form.chat-form#chatForm
        input.chat-input(type='text', name='name', id="name" placeholder='Full Name' required)
        input.chat-input(type='email', name='email', id="email" placeholder='Email' required)
        input.chat-input(type='tel', name='phoneNumber', id="phoneNumber" placeholder='Phone number' required)
        textarea.chat-message(name='message', id="message" placeholder='Your message' required)

        input(class="is-hidden" type="text" name="_gotcha")
        input(type="hidden" name="_subject" value="Subject")

        input.chat-send(type='submit' value="Send")
